<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- State when pressed -->
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <gradient
                android:startColor="@color/button_pressed"
                android:endColor="@color/dark_gold"
                android:angle="135"
                android:type="radial"
                android:gradientRadius="100dp" />
            <stroke
                android:width="2dp"
                android:color="@color/golden_yellow" />
            <size
                android:width="150dp"
                android:height="150dp" />
        </shape>
    </item>
    
    <!-- State when selected -->
    <item android:state_selected="true">
        <shape android:shape="oval">
            <gradient
                android:startColor="@color/kira_gradient_start"
                android:endColor="@color/kira_gradient_end"
                android:angle="135"
                android:type="radial"
                android:gradientRadius="120dp" />
            <stroke
                android:width="3dp"
                android:color="@color/golden_yellow" />
            <size
                android:width="150dp"
                android:height="150dp" />
        </shape>
    </item>
    
    <!-- Default state -->
    <item>
        <shape android:shape="oval">
            <gradient
                android:startColor="@color/button_unselected"
                android:endColor="@color/deep_black"
                android:angle="135"
                android:type="radial"
                android:gradientRadius="120dp" />
            <stroke
                android:width="1dp"
                android:color="@color/warm_amber" />
            <size
                android:width="150dp"
                android:height="150dp" />
        </shape>
    </item>
    
</selector>