<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Time-based Greeting -->
        <TextView
            android:id="@+id/greetingText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Morning"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="32dp"
            android:gravity="center" />

        <!-- Character Selection Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Character"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_marginBottom="16dp"
            android:gravity="center" />

        <!-- Character Cards Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="32dp">

            <!-- Kira Character Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/kiraCharacterCard"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_margin="12dp"
                app:cardCornerRadius="70dp"
                app:cardElevation="8dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/blue_card_background"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kira"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white" />

                    <TextView
                        android:id="@+id/kiraSelectedIndicator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="✓ Selected"
                        android:textSize="12sp"
                        android:textColor="@android:color/white"
                        android:layout_marginTop="4dp"
                        android:visibility="visible" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Hugo Character Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/hugoCharacterCard"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_margin="12dp"
                app:cardCornerRadius="70dp"
                app:cardElevation="8dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/maya_card_background"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hugo"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white" />

                    <TextView
                        android:id="@+id/hugoSelectedIndicator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="✓ Selected"
                        android:textSize="12sp"
                        android:textColor="@android:color/white"
                        android:layout_marginTop="4dp"
                        android:visibility="invisible" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <!-- Session Pool Status Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Session Pool Status"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_marginBottom="12dp"
            android:gravity="center" />

        <TextView
            android:id="@+id/kiraPoolStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kira (Français): Initializing..."
            android:textSize="12sp"
            android:textColor="@android:color/white"
            android:alpha="0.7"
            android:gravity="center"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/hugoPoolStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hugo (Français): Initializing..."
            android:textSize="12sp"
            android:textColor="@android:color/white"
            android:alpha="0.7"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- Character Profile Images Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="32dp">

            <!-- Kira Profile Image -->
            <ImageView
                android:id="@+id/kiraProfileImage"
                android:layout_width="150dp"
                android:layout_height="200dp"
                android:layout_margin="16dp"
                android:adjustViewBounds="true"
                android:scaleType="centerInside"
                android:contentDescription="Kira Profile"
                android:src="@drawable/kira_profile" />

            <!-- Hugo Profile Image -->
            <ImageView
                android:id="@+id/hugoProfileImage"
                android:layout_width="150dp"
                android:layout_height="200dp"
                android:layout_margin="16dp"
                android:adjustViewBounds="true"
                android:scaleType="centerInside"
                android:contentDescription="Hugo Profile"
                android:src="@drawable/hugo_profile" />

        </LinearLayout>


    </LinearLayout>

</ScrollView>