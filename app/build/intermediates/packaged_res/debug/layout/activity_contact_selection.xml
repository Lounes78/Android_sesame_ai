<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/deep_black"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Time-based Greeting -->
        <TextView
            android:id="@+id/greetingText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Morning"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="@color/off_white"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="48dp"
            android:gravity="center" />

        <!-- Character Cards Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="32dp">

            <!-- Kira Section -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginEnd="12dp">

                <!-- Kira Character Card -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/kiraCharacterCard"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_margin="12dp"
                    app:cardCornerRadius="60dp"
                    app:cardElevation="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/kira_futuristic_background"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="I am Kira"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/off_white"
                            android:shadowColor="@color/soft_shadow"
                            android:shadowDx="1"
                            android:shadowDy="1"
                            android:shadowRadius="2" />

                        <TextView
                            android:id="@+id/kiraSelectedIndicator"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="✓ Selected"
                            android:textSize="9sp"
                            android:textColor="@color/golden_yellow"
                            android:textStyle="bold"
                            android:layout_marginTop="4dp"
                            android:visibility="visible" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Kira Progress -->
                <TextView
                    android:id="@+id/kiraPoolStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ready"
                    android:textSize="12sp"
                    android:textColor="@color/golden_yellow"
                    android:textStyle="bold"
                    android:gravity="center" />

            </LinearLayout>

            <!-- Hugo Section -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginStart="12dp">

                <!-- Hugo Character Card -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/hugoCharacterCard"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_margin="12dp"
                    app:cardCornerRadius="60dp"
                    app:cardElevation="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/hugo_futuristic_background"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="I am Hugo"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/off_white"
                            android:shadowColor="@color/soft_shadow"
                            android:shadowDx="1"
                            android:shadowDy="1"
                            android:shadowRadius="2" />

                        <TextView
                            android:id="@+id/hugoSelectedIndicator"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="✓ Selected"
                            android:textSize="9sp"
                            android:textColor="@color/golden_yellow"
                            android:textStyle="bold"
                            android:layout_marginTop="4dp"
                            android:visibility="invisible" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Hugo Progress -->
                <TextView
                    android:id="@+id/hugoPoolStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Loading..."
                    android:textSize="12sp"
                    android:textColor="@color/golden_yellow"
                    android:textStyle="bold"
                    android:gravity="center" />

            </LinearLayout>

        </LinearLayout>

        <!-- Character Profile Images Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="32dp">

            <!-- Kira Profile Image -->
            <ImageView
                android:id="@+id/kiraProfileImage"
                android:layout_width="280dp"
                android:layout_height="350dp"
                android:layout_margin="4dp"
                android:adjustViewBounds="true"
                android:scaleType="centerInside"
                android:contentDescription="Kira Profile"
                android:src="@drawable/kira_profile" />

            <!-- Hugo Profile Image -->
            <ImageView
                android:id="@+id/hugoProfileImage"
                android:layout_width="280dp"
                android:layout_height="350dp"
                android:layout_margin="4dp"
                android:adjustViewBounds="true"
                android:scaleType="centerInside"
                android:contentDescription="Hugo Profile"
                android:src="@drawable/hugo_profile" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>